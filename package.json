{
  "name": "class-wordpress-theme",
  "private": true,
  "version": "1.0.0",
  "description": "A classic PHP-based theme, with modern tooling and support for Gutenberg blocks.",
  "author": "Greg Rickaby",
  "license": "GPL-2.0-or-later",
  "keywords": [
    "WordPress",
    "Classic Theme"
  ],
  "bugs": {
    "url": "https://github.com/gregrickaby/classic-wordpress-theme/issues"
  },
  "homepage": "https://github.com/gregrickaby/classic-wordpress-theme",
  "main": "index.js",
  "scripts": {
    "build:pot": "composer run-script pot",
    "build:theme": "webpack --mode=production --node-env=production --env production",
    "build": "npm run build:theme && npm run build:pot",
    "dev": "webpack --mode=development --node-env=development --env development --watch",
    "format": "run-p format:*",
    "format:css": "npx prettier '**/*.{css,scss}' --write && npm run lint:css -- --fix",
    "format:js": "npx prettier '**/*.{js,ts}' --write && npm run lint:js -- --fix",
    "format:md": "npm run lint:md -- --fix",
    "format:php": "composer run-script format",
    "lint": "run-p lint:*",
    "lint:css": "npx stylelint '**/*.{css,scss}'",
    "lint:js": "npx eslint '**/*.{js,ts}'",
    "lint:md": "npx markdownlint-cli '**/*.md'",
    "lint:php": "composer run-script lint",
    "start": "npm run dev"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.6",
    "@babel/core": "^7.14.8",
    "@babel/preset-env": "^7.14.8",
    "autoprefixer": "^10.3.1",
    "babel-loader": "^8.2.2",
    "css-loader": "^6.2.0",
    "css-minimizer-webpack-plugin": "^3.0.2",
    "eslint": "^7.31.0",
    "eslint-config-esnext": "^4.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-webpack-plugin": "^3.0.1",
    "markdownlint": "^0.23.1",
    "markdownlint-cli": "^0.28.1",
    "mini-css-extract-plugin": "^2.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.6",
    "postcss-import": "^14.0.2",
    "postcss-loader": "^6.1.1",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.3.2",
    "style-loader": "^3.2.1",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-webpack-plugin": "^3.0.1",
    "tailwindcss": "^2.2.7",
    "webpack": "^5.46.0",
    "webpack-cli": "^4.7.2",
    "webpack-livereload-plugin": "^3.0.1"
  }
}
