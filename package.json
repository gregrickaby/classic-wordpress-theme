{
  "name": "class-wordpress-theme",
  "private": true,
  "version": "1.0.0",
  "description": "A classic PHP-based theme, with modern tooling and support for Gutenberg blocks.",
  "author": "Greg Rickaby",
  "license": "GPL-2.0-or-later",
  "keywords": [
    "WordPress",
    "Classic Theme"
  ],
  "bugs": {
    "url": "https://github.com/gregrickaby/classic-wordpress-theme/issues"
  },
  "homepage": "https://github.com/gregrickaby/classic-wordpress-theme",
  "main": "index.js",
  "scripts": {
    "build:pot": "composer run-script pot",
    "build:theme": "webpack --mode=production --node-env=production --env production",
    "build": "npm run build:theme && npm run build:pot",
    "dev": "webpack --mode=development --node-env=development --env development --watch",
    "format": "run-p format:*",
    "format:css": "npx prettier '**/*.{css,scss}' --write && npm run lint:css -- --fix",
    "format:js": "npx prettier '**/*.{js,ts}' --write && npm run lint:js -- --fix",
    "format:md": "npm run lint:md -- --fix",
    "format:php": "composer run-script format",
    "lint": "run-p lint:*",
    "lint:css": "npx stylelint '**/*.{css,scss}'",
    "lint:js": "npx eslint '**/*.{js,ts}'",
    "lint:md": "npx markdownlint-cli '**/*.md'",
    "lint:php": "composer run-script lint",
    "start": "npm run dev"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.7",
    "@babel/core": "^7.17.9",
    "@babel/preset-env": "^7.16.11",
    "autoprefixer": "^10.4.4",
    "babel-loader": "^8.2.4",
    "css-loader": "^6.7.1",
    "css-minimizer-webpack-plugin": "^3.4.1",
    "eslint": "^8.13.0",
    "eslint-config-esnext": "^4.1.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-webpack-plugin": "^3.1.1",
    "markdownlint": "^0.25.1",
    "markdownlint-cli": "^0.31.1",
    "mini-css-extract-plugin": "^2.6.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.12",
    "postcss-import": "^14.1.0",
    "postcss-loader": "^7.0.2",
    "postcss-preset-env": "^7.4.3",
    "prettier": "^2.6.2",
    "style-loader": "^3.3.1",
    "stylelint": "^14.6.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-webpack-plugin": "^3.2.0",
    "tailwindcss": "^3.0.23",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2",
    "webpack-livereload-plugin": "^3.0.2"
  }
}
